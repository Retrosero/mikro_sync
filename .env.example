# Connection Pool (Opsiyonel)
PG_MAX_CONNECTIONS=10
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=10000

# Sync Configuration
SYNC_INTERVAL_MS=2000
BATCH_SIZE=50
MAX_RETRY_COUNT=3
LOG_LEVEL=info

