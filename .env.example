# MS SQL (ERP) Configuration
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=MIKRO_DB
MSSQL_USER=sa
MSSQL_PASSWORD=your_password
MSSQL_ENCRYPT=false
MSSQL_TRUST_SERVER_CERTIFICATE=true

# PostgreSQL (Web) Configuration
# Yerel PostgreSQL için:
# PG_HOST=localhost
# PG_SSL=false

# Supabase için:
PG_HOST=db.xxxxxxxxxxxxx.supabase.co
PG_PORT=5432
PG_DATABASE=postgres
PG_USER=postgres
PG_PASSWORD=your_supabase_password
PG_SSL=true

# Connection Pool (Opsiyonel)
PG_MAX_CONNECTIONS=10
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=10000

# Sync Configuration
SYNC_INTERVAL_MS=2000
BATCH_SIZE=50
MAX_RETRY_COUNT=3
LOG_LEVEL=info
